<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="New Password"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Favorite Music Genres"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/rockCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rock" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/popCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pop" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/jazzCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jazz" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/classicalCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classical" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/hipHopCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hip Hop" />

</LinearLayout> 