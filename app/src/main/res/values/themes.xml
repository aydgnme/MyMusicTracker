<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMusicTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyMusicTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_green</item>
        <item name="colorPrimaryVariant">@color/spotify_green</item>
        <item name="colorOnPrimary">@color/spotify_white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spotify_dark_gray</item>
        <item name="colorSecondaryVariant">@color/spotify_dark_gray</item>
        <item name="colorOnSecondary">@color/spotify_white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/spotify_black</item>
        <item name="android:navigationBarColor">@color/spotify_black</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/spotify_black</item>
        <item name="colorSurface">@color/spotify_dark_gray</item>
        <item name="colorOnSurface">@color/spotify_white</item>
        <item name="colorOnBackground">@color/spotify_white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/spotify_white</item>
        <item name="android:textColorSecondary">@color/spotify_light_gray</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.MyMusicTracker.Button</item>
        <item name="textInputStyle">@style/Widget.MyMusicTracker.TextInputLayout</item>
    </style>

    <!-- Özel buton stili -->
    <style name="Widget.MyMusicTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/spotify_black</item>
        <item name="backgroundTint">@color/spotify_green</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Özel TextInputLayout stili -->
    <style name="Widget.MyMusicTracker.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/spotify_green</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/spotify_light_gray</item>
        <item name="android:textColorHint">@color/spotify_light_gray</item>
        <item name="boxBackgroundColor">@color/spotify_dark_gray</item>
    </style>

    <!-- Özel buton varyantları -->
    <style name="Widget.MyMusicTracker.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/spotify_green</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MyMusicTracker.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/spotify_green</item>
        <item name="rippleColor">@color/spotify_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>